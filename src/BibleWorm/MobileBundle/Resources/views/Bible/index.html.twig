{% extends 'BibleWormMobileBundle:Default:index.html.twig' %}

{% block header %}
    <a href="{{ url('bw_mobile_homepage') }}" data-role="button" data-icon="home" data-direction="reverse">Home</a>
    <h1>Books</h1>
{% endblock %}

{% block body %}
    <ul data-role="listview" data-theme="c">
        {% for book in books %}
            <li><a href="{{ url('bw_get_bible_book', {'book': book}) }}">{{ book }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}