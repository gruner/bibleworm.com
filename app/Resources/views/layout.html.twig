<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>BibleWorm Prayers{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="author" content="Andrew Gruner">
    <link rel="shortcut icon" href="/images/favicon.png">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!--<script src="/js/modernizr-2.0.6.min.js"></script>-->
</head>
<body">
    <div class="container">
        <header id="hd">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <h1><a href="{{ path('get_dashboard') }}" class="brand">Prayers</a></h1>
                        <ul class="nav">
                            <li><a href="{{ path('get_shared_prayers') }}">Shared Prayers</a></li>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li><a href="{{ path('fos_user_profile_edit') }}">My Account</a></li> 
                                <li><a href="{{ path('fos_user_security_logout') }}">Sign Out</a></li>
                            {% else %}
                                <li><a href="{{ path('fos_user_security_login') }}">Sign In</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <div role="main">
            {% block body %}{% endblock %}
        </div>
    </div><!--/#container -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="/js/jquery-1.7.1.min.js"><\/script>')</script>
    <script src="/js/app.js"></script>
</body>
</html>
